@using bundleLook.Models
@{
    ViewBag.Title = "About";
}
<h2>@ViewBag.Title.</h2>

<p>Use this area to provide additional information.</p>

<hr />

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Slogan</th>
            <th scope="col">Content</th>
        </tr>
    </thead>
    <tbody>
        @{ int i = 0;}
        @foreach (News item in ViewBag.News)
        {
            i++;
            <tr>
                <th scope="row">@i</th>
                <td>@item.Title</td>
                <td>@item.Slogan</td>
                <td>@((item.Content.Count() > 100) ? (item.Content.Substring(0, 100)) : (item.Content))</td>
            </tr>
        }     
    </tbody>
</table>